{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext.asynciterable"],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": ["/node_modules/"],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.graphql"
  ]
}
